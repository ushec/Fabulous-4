extends layout.pug

block content
  h2 Countries
  link(rel="stylesheet", href="cities.css")
  table
    thead
      th ID
      th.text-center Country
      th City
      th population
    tbody
      each row, i in rows
        tr
          td.fit
            a(href=`/country/${i + 1}`) #{i + 1}
          td.fit #{row.countryCode}
          td #{row.name}
          - const population = new Intl.NumberFormat().format(row.Population);
          td.fit.number #{population}